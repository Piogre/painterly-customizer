<form method="post">
<ul class="categories">
  {{#each options}}
    <li>
      <h3>{{capitalizeAll this.name}}</h3>
      <ul class="groups">
      {{#each this.textures}}
        <li>
          <h5>{{capitalizeAll this.name}}</h5>
          <ul class="texture">
          {{#each this.options}}
            <li class="{{this.class}}">
              <label for="{{this.id}}">
                <input type="radio" name="textures[{{this.category}}/{{this.group}}/{{this.texture}}]" id="{{this.id}}" value="{{this.id}}" />
                <div class="texture-group">
                  <img src="/git{{this.preview}}" alt="{{this.name}}" class="preview" />
                  <div class="texture-group__text">
                    <div class="texture-group__name">{{this.name}}</div>
                    <div class="texture-group__author">{{capitalizeAll this.author}}</div>
                  </div>
                </div>
              </label>
            </li>
          {{/each}}
          </ul>
        </li>
      {{/each}}
      </ul>
    </li>
  {{/each}}
</ul>
<p>
  <label>
    Pack Description
    <input type="text" name="description" />
  </label>
</p>
<p>
  <button type="Submit">Download Pack</button>
</p>
</form>